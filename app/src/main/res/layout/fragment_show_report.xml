<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".it_employee.show_report">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/green1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text=" عرض بيانات البلاغ  "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=" رقم البلاغ : "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="البلاغ        "
                        android:paddingEnd="@dimen/_5sdp"
                        android:id="@+id/it_send_report_number"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="العنوان الفعلي : "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="end"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=" 1  "
                        android:gravity="end"
                        android:id="@+id/it_send_report_address"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:text="برنامج المكافح الوزاري : "
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_5sdp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_16sdp"
                        android:text="يوجد "
                        android:id="@+id/it_send_report_program"
                        android:layout_weight="1"
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_5sdp"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="التاريخ : "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="end"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/_5sdp"
                        android:id="@+id/it_send_report_date"
                        android:text="التاريخ  "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الوقت : "
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/green1"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=" الوفت  "
                    android:id="@+id/it_send_report_time"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/green1"
                    >
                </TextView>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="اسم الموظف : "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="end"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="  الموظف 1 "
                        android:textSize="@dimen/_16sdp"
                        android:id="@+id/it_send_report_name"
                        android:textColor="@color/green1"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="القسم : "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="end"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=" القسم 1 "
                        android:textSize="@dimen/_16sdp"
                        android:id="@+id/it_send_report_section"
                        android:textColor="@color/green1"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="  وصف المشكله : "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/green1"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="end"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=" وصف  "
                        android:textSize="@dimen/_16sdp"
                        android:id="@+id/it_send_report_discriptions"
                        android:textColor="@color/green1"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/it_solve_report"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:background="@drawable/button_shape"
                        android:text=" إرسال التقرير  "
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>